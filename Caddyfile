epsicore.home {
	tls internal
	root * /www
	encode
	file_server

	respond /hello "Hello World!"

	handle_path /cockpit/* {
		reverse_proxy systemd-cockpit:9090
	}
	handle_path /files/* {
		reverse_proxy systemd-copyparty:3923
	}
	handle_path /media/* {
		reverse_proxy /media/* systemd-jellyfin:8096
	}
}
